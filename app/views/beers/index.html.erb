<h1>Beers</h1>

<div ng-app="app">
  {{ 2 + 2 }}
  <div ng-controller="beerCtrl" ng-init="setup()">
    <div ng-repeat="beer in beers">
      <h3 ng-click="toggleInfo(beer)">{{ beer.name }}</h3>
      <ul>
        <li ng-if="beer.visible">{{ beer.style }}</li>
        <li ng-if="beer.visible">{{ beer.alcohol }}</li>
        <li ng-if="beer.visible">{{ beer.ibu }}</li>
      </ul>
    </div>
    <h2>Add a beer:</h2>
    <li ng-repeat="error in errors">{{ error }}</li>
    Name: <input type="text", ng-model="newBeerName">
    Style: <input type="text", ng-model="newBeerStyle">
    Alcohol: <input type="text", ng-model="newBeerAlcohol">
    IBU: <input type="text", ng-model="newBeerIbu">
    <button ng-click="addBeer(newBeerName, newBeerStyle, newBeerAlcohol, newBeerIbu)">Add Beer</button>
  </div>
</div>